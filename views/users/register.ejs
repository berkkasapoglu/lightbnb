<%- layout('layout/boilerplate') %>
<h2 class="section-header text-center">Register</h2>
<form action="/register" class="form" id="form" method="POST" novalidate>
    <div class="input-wrapper">
        <label for="title" class="input-wrapper__label">
            <h3>Username</h3>
        </label>
        <div class="input-wrapper__check">
            <input type="text" class="input-wrapper__input" id="username" name="username" required>
            <i class="input-wrapper__control fa-solid fa-circle-check"></i>
            <i class="input-wrapper__control fa-solid fa-circle-exclamation"></i>
            <div class="err-message"></div>
        </div>
    </div>
    <div class="input-wrapper">
        <label for="title" class="input-wrapper__label">
            <h3>Password</h3>
        </label>
        <div class="input-wrapper__check">
            <input type="password" class="input-wrapper__input" id="password" name="password" required>
            <i class="input-wrapper__control fa-solid fa-circle-check"></i>
            <i class="input-wrapper__control fa-solid fa-circle-exclamation"></i>
            <div class="err-message"></div>
        </div>
    </div>
    <div class="input-wrapper">
        <label for="title" class="input-wrapper__label">
            <h3>Email</h3>
        </label>
        <div class="input-wrapper__check">
            <input type="email" class="input-wrapper__input" id="email" name="email" required>
            <i class="input-wrapper__control fa-solid fa-circle-check"></i>
            <i class="input-wrapper__control fa-solid fa-circle-exclamation"></i>
            <div class="err-message"></div>
        </div>
    </div>
    <div class="form-btn-wrapper">
        <button class="btn btn--primary btn--full">Register</button>
    </div>
</form>
<script src="/js/validateForm.js"></script>